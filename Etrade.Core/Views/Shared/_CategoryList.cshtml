@model IEnumerable<Etrade.Entity.Models.Entities.Category>
<ul class="list-group">
    @if (ViewBag.Id == null)
    {
        <a class="list-group-item active" asp-controller="Home" asp-action="List">
           All Categories
        </a>
    }
    else
    {
        <a class="list-group-item" asp-controller="Home" asp-action="List" asp-route-id="">
            All Categories
        </a>
    }
    @foreach (var category in Model)
    {
        if (ViewBag.Id != null)
        {
            if (category.Id == ViewBag.Id)
            {
                <a class="list-group-item active" asp-controller="Home" asp-action="List" asp-route-id="@category.Id">
                   @category.Name
                </a>
            }
            else
            {
                <a class="list-group-item" asp-controller="Home" asp-action="List" asp-route-id="@category.Id">
                    @category.Name
                </a>
            }
        }
        else
        {
            <a class="list-group-item" asp-controller="Home" asp-action="List" asp-route-id="@category.Id">
                @category.Name
            </a>
        }
    }
</ul>
